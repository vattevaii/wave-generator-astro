---
import Layout from '../layouts/Layout.astro';
import WaveGenerator from '../components/WaveGenerator.astro';
import WaveControls from '../components/WaveControls.astro';
---

<Layout>
  <div class="flex flex-col items-center py-8">
    <h1 class="mb-6 text-3xl font-bold text-gray-900">Wave Generator</h1>
    <div class="w-full max-w-4xl overflow-hidden rounded-lg bg-white shadow-md">
      <div class="flex flex-col gap-4 pt-6">
        <WaveControls />
        <WaveGenerator />
      </div>
    </div>
  </div>
</Layout>
