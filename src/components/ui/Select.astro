---
interface Props {
  id?: string;
  label?: string;
  className?: string;
  options: { value: string; label: string }[];
}

const { id, label, className = "", options } = Astro.props;
---

<div class="flex flex-col gap-1.5">
  {label && <label for={id} class="text-sm text-gray-600">{label}</label>}
  <select
    id={id}
    class={`px-4 py-2 border border-gray-300 rounded-md bg-white cursor-pointer text-base ${className}`}
  >
    {options.map((option) => (
      <option value={option.value}>{option.label}</option>
    ))}
  </select>
</div>