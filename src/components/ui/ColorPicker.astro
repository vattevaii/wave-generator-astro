---
interface Props {
  id?: string;
  label?: string;
  value?: string;
  className?: string;
}

const { id, label, value = "#0099ff", className = "" } = Astro.props;
---

<div class="flex flex-col gap-1.5">
  {label && <label for={id} class="text-sm text-gray-600">{label}</label>}
  <input
    type="color"
    id={id}
    value={value}
    class={`w-12 h-8 p-0 border border-gray-300 rounded cursor-pointer ${className}`}
  />
</div>